{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
    ],
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "typings",
    "stories",
  ]
}