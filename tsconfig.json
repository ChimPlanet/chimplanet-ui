{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "composite": true,
    "allowJs": true,
    "lib": ["ESNext", "dom"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@chimplanet/ui/*": ["src/*"]
    }
  },
  "include": ["src", "typings"]
}
